@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />
<PageTitle>Portofolio</PageTitle>

<RadzenLayout Style="height: 300px; grid-template-columns: 1fr auto; grid-template-areas: 'rz-header rz-header' 'rz-body rz-sidebar'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenLabel Text="Borcia Iulian Stefan" />
            <RadzenSidebarToggle Click="@(() => sidebar3Expanded = !sidebar3Expanded)" Class="rz-m-0"/>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar3Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home"/>
            <RadzenPanelMenuItem Text="About Me" Icon="account_box"/>
            <RadzenPanelMenuItem Text="My Projects" Icon="assessment"/>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>

    </RadzenBody>
</RadzenLayout>

@code {
    bool sidebar3Expanded = true;
}
